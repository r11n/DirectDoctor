<%= form_with(model: [:admin, review], class: "flex w-full", data: {type: "html", action: "ajax:error->message#errorHandler ajax:success->message#success" }) do |form| %>
  <div class="flex-1 mb-6 mr-4">
    <div class="bg-white border pb-16 rounded shadow p-5 w-full">
      <div class="w-full pt-4 flex">
        <div class="input-group w-1/2 ml-4">
          <label class="label text-gray-500" for="review_title">Rating</label>
          <%=form.object&.rating%>
        </div>
      </div>
      <div class="w-full pt-4 flex">
        <div class="input-group w-1/2 ml-4">
          <%= form.label :title, :class => "label text-gray-500" %>
          <%= form.text_field :title, :class => "input bg-white", :autocomplete => "off" %>
        </div>
      </div>
      <div class="w-full pt-4 flex">
        <div class="input-group w-1/2 ml-4">
          <%= form.label :review, :class => "label text-gray-500" %>
          <%= form.text_area :review, :class => "input bg-white" %>
        </div>
      </div>
      <div class="w-full pt-4 flex">
        <div class="input-group w-1/2 ml-4">
          <%= form.label :status, :class => "label text-gray-500" %>
          <%= form.select(:status, statuses.map {|k, v| [k.humanize.capitalize, v]}, {}, {class: "select"}) %>
        </div>
      </div>
      <div class="float-left pt-5">
        <%= form.button(type: "submit", class: "btn btn-md btn-default btn-dd-blue btn-outline text-sm font-bold float-right", data: {disable_with: "<i class='fab fa fa-spinner fa-spin pr-2'></i> Saving in..." }) do %>
          <span><i class='fab fa fa-floppy-o pr-2'></i><%=button_text%> Review</span>
        <% end %>
      </div>
    </div>
  </div>
  <div class="w-1/4">
    <div class="bg-white border p-5 rounded shadow">
      <div class="input-group">
        <label class="label text-gray-500" for="doctor_FDD_ID">FDD ID</label>
        <%= form.object&.doctor&.fdd_id %>
      </div>
      <div class="input-group">
        <label class="label text-gray-500" for="doctor_FDD_ID">Doctor Name</label>
        <%= form.object&.doctor&.name %>
      </div>
      <div class="mt-6 font-glacialitalic text-lg border-b-2">Review by</div>
      <div class="input-group mt-2">
        <label class="label text-gray-500" for="doctor_FDD_ID">Name</label>
        <%= form.object&.name %>
      </div>
      <div class="input-group mt-2">
        <label class="label text-gray-500" for="doctor_FDD_ID">Email</label>
        <%= form.object&.email %>
      </div>
    </div>
  </div>
<% end %>
