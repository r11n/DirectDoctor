<div class="w-full flex mt-4">
  <div class="w-1/3">
    <div class="text-gray-600 text-md font-bold">Contact Information</div>
    <p class="text-gray-600 text-sm"> About contact information </p>
  </div>
  <div class="w-2/3">
    <div class="input-group">
      <%= form.label :email, :class => "label text-gray-500" %>
      <%= form.text_field :email, :class => "input bg-white", :autocomplete => "off" %>
    </div>
    <div class="input-group">
      <%= form.label :phone, :class => "label text-gray-500" %>
      <%= form.text_field :phone, :class => "input bg-white", :autocomplete => "off" %>
    </div>
    <div class="input-group">
      <label class="label text-gray-600" for="doctor_Practice/Clinic name">Business Address</label>
      <%= form.text_field :address_line_1, :class => "input bg-white", :autocomplete => "off" %>
    </div>
    <div class="w-full flex">
      <div class="w-1/3">
        <div class="input-group">
          <%= form.label :state, :class => "label text-gray-500" %>
          <%= form.text_field :state, :class => "input bg-white", :autocomplete => "off" %>
        </div>
      </div>
      <div class="w-1/3 ml-2">
        <div class="input-group">
          <%= form.label :city, :class => "label text-gray-500" %>
          <%= form.text_field :city, :class => "input bg-white", :autocomplete => "off" %>
        </div>
      </div>
      <div class="w-1/3 ml-2">
        <div class="input-group">
          <%= form.label :zip_code, :class => "label text-gray-500" %>
          <%= form.text_field :zipcode, :class => "input bg-white", :autocomplete => "off" %>
        </div>
      </div>
    </div>
    <div class="input-group">
      <%= form.label :fax, :class => "label text-gray-500" %>
      <%= form.text_field :fax, :class => "input bg-white", :autocomplete => "off" %>
    </div>
    <div class="input-group">
      <%= form.label :webiste_url, :class => "label text-gray-500" %>
      <%= form.text_field :website_url, :class => "input bg-white", :autocomplete => "off" %>
    </div>
  </div>
</div>
<div class="w-full flex mt-4 border-t border-doctor-blue">
  <div class="w-full flex mt-4">
    <div class="w-1/3">
      <div class="text-gray-600 text-md font-bold">Social Profiles</div>
      <p class="text-gray-600 text-sm"> About social profiles </p>
    </div>
    <div class="w-2/3" data-controller="components">
      <!-- components -->
      <% social_links = { 'social_link' => nil } %>
      <template data-target="components.componentTemplate">
        <%= render "admin/doctors/partials/social_links", value: social_links %>
      </template>
      <div class="input-group">
        <%= form.label :social_profile, :class => "label text-gray-500" %>
        <div class="mt-2 sortable" data-target="components.components">
          <% if form.object.social_profiles.present? %>
            <% form.object.social_profiles.each do |social_links| %>
              <div class="mb-3">
                <%= render "admin/doctors/partials/social_links", value: social_links %>
              </div>
            <% end %>
          <% else %>
            <div class="mb-3">
              <%= render "admin/doctors/partials/social_links", value: social_links %>
            </div>
          <% end %>
        </div>
        <div class="text-sm text-primary underline text-gco">
          <label class="cursor-pointer" data-action="click->components#addComponent">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-6 h-6 inline-block">
              <path fillRule="evenodd" d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z" clipRule="evenodd" />
            </svg>Add Social Profile</label>
        </div>
      </div>
      <!-- components -->
    </div>
  </div>
</div>
