<div class="w-full flex mt-4">
  <div class="w-1/3">
    <div class="text-gray-600 text-md font-bold">Background Information</div>
    <p class="text-gray-600 text-sm"> About Background Information </p>
  </div>
  <div class="w-2/3" data-controller="components">
    <div class="input-group">
      <label class="label text-gray-600" for="title">Active Medical License</label>
      <%= form.select(:active_licenses, states.collect {|state| [state.name, state.name]}, {:prompt => "Select..."}, {class: "select", :multiple => true}) %>
    </div>
    <div class="input-group">
      <label class="label text-gray-600" for="title">Disciplinary Action Taken By Sates Medical Board</label>
      <%= form.text_field :disciplinary_action_taken, :class => "", :placeholder => "Select"%>
    </div>
  </div>
</div>
