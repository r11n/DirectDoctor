<% if object.present? && object&.errors&.any? %>
  <div class="alert-banner w-full h-0">
    <input type="checkbox" class="hidden" id="banneralert">
    <label class="close cursor-pointer flex items-center justify-between w-full p-2 bg-red-500 shadow text-white rounded-lg border-2 border-red-500" title="close" for="banneralert">
      <ul class="pl-5">
        <% object.errors.full_messages.each do |error| %>
          <li class="list-disc"><%= error %></li>
        <% end %>
      </ul>
      <svg class="fill-current text-white " xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 18 18">
        <path d="M14.53 4.53l-1.06-1.06L9 7.94 4.53 3.47 3.47 4.53 7.94 9l-4.47 4.47 1.06 1.06L9 10.06l4.47 4.47 1.06-1.06L10.06 9z"></path>
      </svg>
    </label>
  </div>
<% end %>
