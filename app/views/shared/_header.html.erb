<nav class="p-2 mt-0 fixed w-full z-50 top-0 bg-white">
  <header class="sm:flex sm:justify-between sm:items-center sm:px-4 sm:py-3 sm:mx-16 mx-2 " >
    <div class="flex items-center justify-between sm:px-3 py-4 sm:p-0">
      <div>
        <a href="<%=root_url%>">
          <%= image_pack_tag "logo.png", alt: "Find my Direct Doctor", class: "h-12"%>
        </a>
      </div>
      <div class="sm:hidden" @click.away="open = false" >
        <button id="userButton" type="button" class="block hover:text-doctor-yellow focus:text-doctor-yellow focus:outline-none" @click="open = !open">
          <svg class="w-6 h-6" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M3 5a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 10a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zM3 15a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd" />
          </svg>
        </button>
      </div>
    </div>
    <div id="userMenu" class="px-4 pt-2 pb-4 sm:flex sm:p-0 sm:items-center sm:justify-center hidden" x-show="open">
      <a href="#" class="block text-gray-800 font-semibold hover:text-doctor-yellow">
        Direct Doctor Directory
        <span>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="inline w-5">
            <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </span>
      </a>
      <div class="hoverable">
        <a href="<%=blogs_url%>" class="block text-gray-800 font-semibold hover:text-doctor-yellow sm:mt-0 sm:ml-4">
          Free Articles
          <span>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="inline w-5">
              <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </span>
        </a>
        <div class="rounded-lg shadow-2xl absolute overflow-auto z-30 profile-menu px-4 py-2">
          <ul class="list-reset">
            <% if @menu_categories %>
              <% @menu_categories.each do |category| %>
                <li class="border-b border-doctor-blue py-1">
                  <a href="<%=blogs_url%>#<%=category.slug%>" class="px-2 py-2 block hover:text-doctor-yellow">
                    <%=category.name%>
                  </a>
                </li>
              <% end %>
            <% end %>
          </ul>
        </div>
      </div>
      <a href="#" class="block text-gray-800 font-semibold hover:text-doctor-yellow sm:mt-0 sm:ml-4">
        Quiz
        <span>
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="inline w-5">
            <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </span>
      </a>
      <a href="https://docs.google.com/forms/d/e/1FAIpQLSe4V_CNAPGLCwvx8TENP_XzfrvG28_0Ye5CG4JHt4ClxTl2Zw/viewform" target="_blank" class="block text-gray-800 border rounded-lg px-6 py-1 border-doctor-yellow ml-4 hover:bg-doctor-yellow hover:text-gray-100">
        List your practice
      </a>
      <% if user_signed_in? %>
        <%= link_to " Logout".html_safe, destroy_user_session_path, method: :delete, class: "block text-gray-800 border rounded-lg px-6 py-1 border-doctor-yellow ml-4 hover:bg-doctor-yellow hover:text-gray-100" %>
      <% else %>
        <a href="<%= new_user_session_path %>" class="block text-gray-800 border rounded-lg px-6 py-1 border-doctor-yellow ml-4 hover:bg-doctor-yellow hover:text-gray-100">
          Login
        </a>
      <% end %>
    </div>
  </header>
</nav>
