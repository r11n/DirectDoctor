<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Find My Direct Doctor</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application_style', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body class="font-glacial">
    <%= render partial: 'shared/header' %>
    <div class="absolute top-0">
      <div class="absolute">
        <%=image_pack_tag 'light_gray_round_edges.svg', class: "h-40"%>
      </div>
      <div class="top-0 px-12">
        <%= image_pack_tag 'light_gray_lines_horizontal.svg', class: "w-32"  %>
      </div>
    </div>
    <div class="relative">
      <div class="absolute right-0 bottom-0 top-0 sm:-mt-20">
        <%=image_pack_tag "yellow_circle_outline_opacity_right.png", class:"w-20"%>
      </div>
    </div>
    <div class="flex sm:justify-between sm:items-center sm:flex-wrap">
      <%= yield %>
    </div>
    <%= render partial: 'shared/footer' %>
  </body>
</html>
