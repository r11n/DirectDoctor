<div class="w-full max-w-xl mx-auto my-32">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4 flex flex-col">
      <div class="mb-4">
        <%= f.label :email, class: "block text-grey-darker text-sm font-bold mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-grey-darker" %>
      </div>
      <div class="mb-6">
        <%= f.label :password, class: "block text-grey-darker text-sm font-bold mb-2" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "shadow appearance-none border border-red rounded w-full py-2 px-3 text-grey-darker mb-3", placeholder: "******************" %>
      </div>
      <div class="flex items-center justify-between">
        <%= f.submit "Sign In", class: "text-gray-800 border rounded-lg px-6 py-1 border-doctor-yellow ml-4 hover:bg-doctor-yellow hover:text-gray-100 bg-white cursor-pointer" %>
      </div>
    </div>
  <% end %>
</div>
