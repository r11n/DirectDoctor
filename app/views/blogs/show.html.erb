<section class="grid grid-cols-12 sm:w-full mb-12 mt-16">
  <div class="fixed mt-64 w-full pl-6 hidden sm:block">
    <!-- AddToAny BEGIN -->
    <div class="a2a_kit a2a_kit_size_32 a2a_default_style w-full grid  grid-flow-row">
      <a class="a2a_button_facebook my-2 text-doctor-blue w-8"></a>
      <a class="a2a_button_twitter my-2 w-8"></a>
      <a class="a2a_button_linkedin my-2 w-8"></a>
      <a class="a2a_button_copy_link my-2 w-8"></a>
    </div>
    <script async src="https://static.addtoany.com/menu/page.js"></script>
    <!-- AddToAny END -->
  </div>
  <div class="col-start-2 col-span-10 z-10">
    <div class="flex w-full flex-wrap sm:justify-between justify-center">
      <div class="md:w-9/12 mt-24 sm:px-16 w-full">
        <div class="w-full">
          <span class="text-px14 border bg-doctor-yellow rounded-full text-gray-100 font-bold border-doctor-yellow px-2 py-1 font-hurmebold"><%=@topic&.category&.name%></span>
          <h1 class="mt-5 text-heading font-hurmebold text-doctor-blue leading-tight">
            <%= @topic&.name %>
          </h1>
        </div>
        <div class="w-full mt-4 border-t-2 border-b-2 border-doctor-blue">
          <div class="flex w-full text-px14  py-4 px-4 font-hurmebold">
            <div class="w-1/2">
              <h4> <%=@topic.readable_published_date%> </h4>
            </div>
            <div class="w-1/2">
              <h4> <%=@topic&.author&.full_name%>, <%=@topic&.author&.title%></h4>
            </div>
          </div>
        </div>
        <div class="w-full mt-4 post">
          <%= @topic&.content.html_safe %>
        </div>
        <div class="w-full mt-10">
          <div class="grid grid-cols-12 border-t-2 border-doctor-blue">
            <div class="col-span-5">
              <p class="font-hurmebold text-doctor-blue px-4 py-4 border-b-2 border-doctor-blue">Previous Post</p>
              <div class="hover:underline mt-6 text-base">
                <a href="<%=@topic&.previous&.slug%>">
                  <%=@topic&.previous&.name%>
                </a>
              </div>
            </div>
            <div class="col-span-2"></div>
            <div class="col-span-5 ">
              <p class="font-hurmebold text-doctor-blue px-4 py-4 border-b-2 border-doctor-blue">Next Post</p>
              <div class="hover:underline mt-6  text-base">
                <a href="<%=@topic&.next&.slug%>">
                  <%=@topic&.next&.name%>
                </a>
              </div>
            </div>
          </div>
        </div>
        <div class="w-full mt-12">
          <div class="flex flex-wrap w-full bg-doctor-blue rounded-lg items-center justify-center">
            <div class="w-1/3 flex justify-center">
              <img src="<%=@topic&.author&.image_url%>" class="rounded-full border-solid border-white border-2 object-contain sm:w-32 sm:h-32 w-20 h-20">
            </div>
            <div class="w-2/3 text-green-100 py-8 md:pr-8">
              <p class="font-hurmebold">Authored by <%=@topic&.author&.full_name%>, <%=@topic&.author&.title%></p>
              <div class=" leading-snug text-sm mt-4 about"><%=@topic&.author&.about&.html_safe %></div>
            </div>
          </div>
        </div>
      </div>
      <div class="md:w-3/12 text-md sm:mt-56 mt-8 text-sm w-full">
        <div class="blog-bg-gray px-6 py-8 rounded-2lg mt-8">
          <div class="w-full">
            <h4 class="text-px20 font-hurmebold text-center">Most Popular Blog Posts</h4>
            <% @popular_topics&.each do |popular_topic| %>
              <div class="mt-4 border-b-2 border-doctor-blue">
                <a href="/blogs/<%=popular_topic.slug%>" class="hover:underline">
                  <p class="py-2"><%=popular_topic.name%> </p>
                </a>
              </div>
            <% end %>
          </div>
        </div>
        <div class="blog-bg-gray px-6 py-8 rounded-2lg mt-8">
          <div class="w-full">
            <h4 class="text-px20 font-hurmebold text-center">What Are Others Reading</h4>
            <% @other_readings.each do |other_reading| %>
              <div class="mt-4 border-b-2 border-doctor-blue">
                <a href="/blogs/<%=other_reading.slug%>" class="hover:underline">
                  <p class="py-2"><%=other_reading.name%> </p>
                </a>
              </div>
            <% end %>
          </div>
        </div>
        <div class="sticky z-20">
          <div class="md:w-full flex flex-col justify-center mt-16 w-full text-base">
            <div class="border shadow-lg px-4 py-4 rounded-lg bg-doctor-blue text-gray-100 cursor-pointer hover:bg-white hover:text-doctor-blue hover:border-doctor-blue">Find a Concierge Doctor near me</div>
            <div class="border shadow-lg px-4 py-4 rounded-lg mt-8 bg-doctor-blue text-gray-100 cursor-pointer hover:bg-white hover:text-doctor-blue hover:border-doctor-blue">Find a Direct Primary Care Doctor near me</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<style>
  .post blockquote {
    background: #f9f9f9;
    border-left: 6px solid #e7ab00;
    margin: 1.5em 10px;
    padding: 0.5em 10px;
    quotes: '\201C''\201D''\2018''\2019';
  }
  .post blockquote:before {
    color: #ccc;
    content: open-quote;
    font-size: 4em;
    line-height: 0.1em;
    margin-right: 0.25em;
    vertical-align: -0.4em;
  }
  .post blockquote p {
    display: inline;
  }
</style>
