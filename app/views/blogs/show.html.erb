<section class="grid grid-cols-12 sm:w-full mb-12 mt-16">
  <div class="md:col-start-2 col-span-10">
    <div class="flex w-full flex-wrap justify-between">
      <div class="md:w-9/12 mt-24 px-16">
        <div class="w-full">
          <span class="text-px14 border bg-doctor-yellow rounded-full text-gray-100 font-bold border-doctor-yellow px-2 py-1 font-hurmebold"><%=@topic&.category&.name%></span>
          <h1 class="mt-5 text-heading font-hurmebold text-doctor-blue leading-tight">
            <%= @topic&.name %>
          </h1>
        </div>
        <div class="w-full mt-4">
          <div class=" border border-doctor-blue"></div>
          <div class="flex w-full text-px14  py-4 px-4 font-hurmebold">
            <div class="w-1/2">
              <h4> <%=@topic.readable_published_date%> </h4>
            </div>
            <div class="w-1/2">
              <h4> Harsha Moole, M.D., MBBS</h4>
            </div>
          </div>
          <div class=" border border-doctor-blue"></div>
        </div>
        <div class="w-full mt-4 post">
          <%= @topic&.content.html_safe %>
        </div>
        <div class="w-full mt-10">
          <div class=" border border-doctor-blue"></div>
          <div class="grid grid-cols-12">
            <div class="col-span-5">
              <p class="font-hurmebold text-doctor-blue px-4 py-4">Previous Post</p>
              <div class=" border border-doctor-blue"></div>
              <div class="hover:underline mt-6 text-base">
                <a href="<%=@topic&.previous&.slug%>">
                  <%=@topic&.previous&.name%>
                </a>
              </div>
            </div>
            <div class="col-span-2"></div>
            <div class="col-span-5 ">
              <p class="font-hurmebold text-doctor-blue px-4 py-4">Next Post</p>
              <div class=" border border-doctor-blue"></div>
              <div class="hover:underline mt-6  text-base">
                <a href="<%=@topic&.next&.slug%>">
                  <%=@topic&.next&.name%>
                </a>
              </div>
            </div>
          </div>
        </div>
        <div class="w-full mt-12">
          <div class="flex flex-wrap w-full bg-doctor-blue rounded-lg items-center justify-center">
            <div class="w-1/3 flex justify-center">
              <img src="<%=@topic&.author&.image_url%>" class="rounded-full border-solid border-white border-2 object-contain w-32 h-32">
            </div>
            <div class="w-2/3 text-green-100 py-8 md:pr-8">
              <p class="font-hurmebold">Authored by <%=@topic&.author&.full_name%>, <%=@topic&.author&.title%></p>
              <p class=" leading-snug text-sm mt-4"><%=@topic&.author&.about%></p>
            </div>
          </div>
        </div>
      </div>
      <div class="md:w-3/12 text-md mt-56 text-sm">
        <div class="blog-bg-gray px-6 py-8 rounded-2lg mt-8">
          <div class="w-full">
            <h4 class="text-px20 font-hurmebold text-center">Most Popular Blog Posts</h4>
            <% @popular_topics&.each do |popular_topic| %>
              <div class="mt-4 border-b-2 border-doctor-blue">
                <a href="/blogs/<%=popular_topic.slug%>" class="hover:underline">
                  <p class="py-2"><%=popular_topic.name%> </p>
                </a>
              </div>
            <% end %>
          </div>
        </div>
        <div class="blog-bg-gray px-6 py-8 rounded-2lg mt-8">
          <div class="w-full">
            <h4 class="text-px20 font-hurmebold text-center">What Are Others Reading</h4>
            <% @other_readings.each do |other_reading| %>
              <div class="mt-4 border-b-2 border-doctor-blue">
                <a href="/blogs/<%=other_reading.slug%>" class="hover:underline">
                  <p class="py-2"><%=other_reading.name%> </p>
                </a>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
